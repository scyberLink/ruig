{
  "name": "ruig",
  "version": "0.1.1",
  "description": "RUIG (Rapid UI Generator) is a powerful **client-based Progressive Web App (PWA)** that revolutionizes the way developers design and generate frontend components. With an intuitive **drag-and-drop interface**, real-time rendering, and **full support for npm packages**, RUIG provides a **seamless, framework-agnostic development experience**â€”all within your browser.",
  "author": "Emmanuel Paul Elom <scansioquielom@gmail.com>",
  "license": "MIT",
  "main": "./lib/extension/RuigExtensionInterface.js",
  "types": "./src/extension/RuigExtensionInterface.tsx",
  "exports": {
    ".": {
      "import": "./lib/extension/RuigExtensionInterface.js",
      "require": "./lib/extension/RuigExtensionInterface.js"
    },
    "./sw": {
      "import": "./lib/workers/sw.min.js",
      "require": "./lib/workers/sw.min.js"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.70",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^7.0.1",
    "cpy": "^11.0.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.2.5",
    "reblend-scripts": "latest",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "terser": "^5.27.1",
    "ts-loader": "^9.5.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "@babel/cli": "^7.25.7",
    "@babel/core": "^7.25.8",
    "babel-preset-reblend": "latest"
  },
  "scripts": {
    "start": "npm run build:workers && reblend-scripts start",
    "build": "tsc && npm run build:workers && GENERATE_SOURCEMAP=false reblend-scripts build && find build -type f -name '*.js' -exec terser {} -o {} --compress --mangle toplevel \\;",
    "format": "prettier --write .",
    "lint": "eslint .",
    "build:workers": "webpack --config webpack.sw.config.js && cp ./lib/workers/sw.min.js ./public/sw.js",
    "lint:autofix": "eslint . --fix",
    "prettier": "prettier .",
    "prettier:fix": "prettier --write .",
    "build:extDev": "npm run build:workers && tsc && babel lib --out-dir lib",
    "setupdev": "npm install -f",
    "preview": "serve -s build",
    "buildAndPreview": "npm run build && npm run preview",
    "test": "reblend-scripts test",
    "eject": "reblend-scripts eject"
  },
  "eslintConfig": {
    "extends": []
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "axios": "^1.6.5",
    "html-to-image": "^1.11.11",
    "idb": "^8.0.0",
    "jszip": "^3.10.1",
    "raw-loader": "^4.0.2",
    "reblendjs": "latest",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0"
  }
}
